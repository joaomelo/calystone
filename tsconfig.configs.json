{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2024",
  },
  "include": [
    "./summary/**/*",
    "*.config.*",
    "*.setup.*", 
    "*.shared.*",
  ],
  "exclude": [
    "node_modules",
    "./dist",
  ]  
}